<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/firstTv"
            android:layout_width="match_parent"
            android:layout_height="0dp"

            android:background="@color/whiteColorForBothThemes"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/secondTv"

            />
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/secondTv"
            android:layout_width="match_parent"
            android:layout_height="0dp"

            android:background="#33818181"
            app:layout_constraintTop_toBottomOf="@id/firstTv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/personLogo"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"

            android:padding="@dimen/_5sdp"
            android:src="@drawable/app_icon"
            android:tint="@color/whiteColorForBothThemes"
            android:background="@color/mainBackGroundColorGreen"

            android:layout_marginStart="@dimen/_10sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/privateNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:singleLine="true"
            android:ellipsize="end"

            android:layout_marginStart="@dimen/_4sdp"

            android:text="Private Number"
            android:textColor="@color/blackColorForBothThemes"
            android:textSize="@dimen/_14ssp"
            android:fontFamily="@font/poppins_medium"
            android:paddingHorizontal="@dimen/_8sdp"

            app:layout_constraintEnd_toStartOf="@id/appLogo"
            app:layout_constraintStart_toEndOf="@id/personLogo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/firstTv"
            />
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/currentTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:singleLine="true"
            android:ellipsize="end"

            android:layout_marginTop="@dimen/_3sdp"
            android:layout_marginStart="@dimen/_4sdp"
            android:text="12:24 no answer"
            android:textColor="@color/blackColorForBothThemes"
            android:textSize="@dimen/_10ssp"
            android:fontFamily="@font/poppins_regular"
           android:paddingHorizontal="@dimen/_8sdp"

            app:layout_constraintEnd_toStartOf="@id/titleCallLogo"
            app:layout_constraintStart_toEndOf="@id/personLogo"
           app:layout_constraintTop_toTopOf="@id/secondTv"
            app:layout_constraintBottom_toTopOf="@id/duration"
            />
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/duration"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:singleLine="true"
            android:ellipsize="marquee"
            android:layout_marginStart="@dimen/_4sdp"

            android:layout_marginBottom="@dimen/_3sdp"
            android:text="Duration: 01:52"
            android:textColor="@color/blackColorForBothThemes"
            android:textSize="@dimen/_10ssp"
            android:fontFamily="@font/poppins_regular"
            android:paddingHorizontal="@dimen/_8sdp"

            app:layout_constraintEnd_toStartOf="@id/titleCallLogo"
            app:layout_constraintStart_toEndOf="@id/personLogo"
            app:layout_constraintTop_toBottomOf="@id/currentTime"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/appLogo"
            android:layout_width="@dimen/_26sdp"
            android:layout_height="@dimen/_26sdp"

            android:padding="@dimen/_5sdp"
            android:src="@drawable/app_icon"
            android:tint="@color/whiteColorForBothThemes"
            android:background="@color/mainBackGroundColorGreen"

            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_marginVertical="@dimen/_3sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/firstTv"
            />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/titleCallLogo"
            android:layout_width="@dimen/_26sdp"
            android:layout_height="@dimen/_26sdp"

            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_marginVertical="@dimen/_3sdp"
            android:padding="@dimen/_3sdp"
            android:src="@drawable/call_icon"
            android:tint="@color/mainBackGroundColorGreen"

            app:layout_constraintTop_toTopOf="@id/secondTv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/mainBackGroundColorGreen"

        app:tabIndicatorColor="@color/whiteColorForBothThemes"
        app:tabIconTint="@color/whiteColorForBothThemes"

        app:layout_constraintTop_toBottomOf="@id/topLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:background="@color/white"

        app:layout_constraintTop_toBottomOf="@id/tabs"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ll_ads"
        />











    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:visibility="gone"

        app:layout_constraintTop_toBottomOf="@id/topLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ll_ads"

        >
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/secondLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginHorizontal="@dimen/_10sdp"
                android:orientation="horizontal"

                android:layout_marginTop="@dimen/_15sdp"

                >
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/addContact"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"

                    android:layout_marginEnd="@dimen/_10sdp"



                    android:paddingVertical="@dimen/_10sdp"
                    android:orientation="vertical"


                    >
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"


                        android:src="@drawable/add_contact_icon_with_person"
                        android:tint="@color/mainBackGroundColorGreen"
                        android:layout_gravity="center"
                        />
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"


                        android:text="Add Contact"
                        android:textSize="@dimen/_12ssp"
                       android:textColor="@color/blackColorForBothThemes"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:paddingHorizontal="@dimen/_3sdp"

                        />
                </androidx.appcompat.widget.LinearLayoutCompat>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/block"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"


                    android:paddingVertical="@dimen/_10sdp"
                    android:orientation="vertical"

                    >
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:src="@mipmap/ic_launcher"
                        android:layout_gravity="center"
                        />
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:text="Block"
                        android:textSize="@dimen/_12ssp"
                       android:textColor="@color/blackColorForBothThemes"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:paddingHorizontal="@dimen/_3sdp"

                        />
                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/thirdLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"



                android:paddingVertical="@dimen/_10sdp"

                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_15sdp"
                >

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/quickReplyLogo"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"

                    android:src="@mipmap/ic_launcher"

                    android:layout_marginStart="@dimen/_10sdp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"

                    />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/quickReplyText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:singleLine="true"
                    android:ellipsize="end"


                    android:text="Quick Replies"
                    android:textColor="@color/blackColorForBothThemes"
                    android:textSize="@dimen/_14ssp"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_marginStart="@dimen/_10sdp"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/quickReplyLogo"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/quickReplyLogo"

                    />

                <HorizontalScrollView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:scrollbars="none"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    app:layout_constraintTop_toBottomOf="@id/quickReplyLogo"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    >
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:orientation="horizontal"
                        >
                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/reply1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="Sorry, I can't talk right now"
                            android:textColor="@color/blackColorForBothThemes"
                            android:textSize="@dimen/_12ssp"
                            android:fontFamily="@font/poppins_regular"

                            android:background="@drawable/rounded_corners_with_stroke"
                            android:paddingVertical="@dimen/_3sdp"
                            android:paddingHorizontal="@dimen/_10sdp"


                            />
                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/reply2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:text="Can i call you later?"
                              android:textColor="@color/blackColorForBothThemes"
                            android:textSize="@dimen/_12ssp"
                            android:fontFamily="@font/poppins_regular"

                            android:background="@drawable/rounded_corners_with_stroke"
                            android:paddingVertical="@dimen/_3sdp"
                            android:paddingHorizontal="@dimen/_10sdp"


                            />
                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/reply3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="I'm on my way"
                              android:textColor="@color/blackColorForBothThemes"
                            android:textSize="@dimen/_12ssp"
                            android:fontFamily="@font/poppins_regular"

                            android:background="@drawable/rounded_corners_with_stroke"
                            android:paddingVertical="@dimen/_3sdp"
                            android:paddingHorizontal="@dimen/_10sdp"


                            />

                    </androidx.appcompat.widget.LinearLayoutCompat>
                </HorizontalScrollView>

            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/reminderLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:paddingVertical="@dimen/_10sdp"



                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_15sdp"
                >

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/reminderLogo"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"

                    android:src="@mipmap/ic_launcher"

                    android:layout_marginStart="@dimen/_10sdp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"

                    />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/reminderText"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"

                    android:singleLine="true"
                    android:ellipsize="end"


                    android:text="Set Reminder"
                      android:textColor="@color/blackColorForBothThemes"
                    android:textSize="@dimen/_14ssp"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_marginStart="@dimen/_10sdp"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/reminderLogo"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/reminderLogo"

                    />
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/selectDate"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"

                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"

                    android:fontFamily="@font/poppins_regular"
                    android:padding="@dimen/_10sdp"

                    android:text="Select Date"

                      android:textColor="@color/blackColorForBothThemes"
                    android:textSize="@dimen/_12ssp"

                    android:background="@drawable/rounded_corners_with_stroke"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/reminderLogo"


                    />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/selectTime"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"

                    android:text="Select Time"
                      android:textColor="@color/blackColorForBothThemes"
                    android:textSize="@dimen/_12ssp"
                    android:fontFamily="@font/poppins_regular"

                    android:background="@drawable/rounded_corners_with_stroke"


                    android:padding="@dimen/_10sdp"

                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"

                    app:layout_constraintTop_toBottomOf="@id/selectDate"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"


                    />
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/setReminder"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"


                    android:text="Set"
                      android:textColor="@color/blackColorForBothThemes"
                    android:textSize="@dimen/_12ssp"
                    android:fontFamily="@font/poppins_medium"

                    android:background="@drawable/rounded_corners_with_stroke"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:paddingVertical="@dimen/_3sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"

                    app:layout_constraintTop_toBottomOf="@id/selectTime"
                    app:layout_constraintEnd_toEndOf="parent"


                    />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </ScrollView>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ll_ads"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:orientation="vertical"
        android:elevation="@dimen/_2sdp"
        android:paddingBottom="@dimen/_8sdp"

        android:visibility="gone"


        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >


        <include
            android:id="@+id/shimmerLay"
            layout="@layout/big_native_ad_new_shimmer"
            />

        <FrameLayout
            android:id="@+id/adContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#0AA3A2A2"
            android:visibility="gone"

            />
    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>




