<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainScannerActivity"

    android:id="@+id/mainLayout"
    android:background="@color/white"
    >

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"
        android:background="@color/mainBackGroundColorGreen"


        >
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/scan"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"

            style="@style/SelectableButtonsBackground"
            android:clickable="true"
            android:focusable="true"



            >
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/scanImage"
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_16sdp"
                android:src="@drawable/scan_icon"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp"

                />
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/scanText"
                 android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/scan"

                android:paddingHorizontal="@dimen/_1sdp"
               android:textSize="@dimen/_11ssp"
                android:textColor="@color/whiteColorForBothThemes"
                android:fontFamily="@font/poppins_regular"

                android:layout_marginTop="@dimen/_5sdp"
                android:textAlignment="center"
                android:layout_gravity="center"

                />
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/scanindicator"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_5sdp"
                android:background="@color/tabSelecterColor"
                android:layout_marginTop="@dimen/_2sdp"
                android:visibility="gone"

                />



        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/create"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            style="@style/SelectableButtonsBackground"
            android:clickable="true"
            android:focusable="true"

            >
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/createImage"
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_16sdp"
                android:src="@drawable/create_icon"
                android:layout_gravity="center"
                android:padding="@dimen/_1sdp"

                android:layout_marginTop="@dimen/_10sdp"
                />
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/createText"
                 android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/create"
                android:paddingHorizontal="@dimen/_1sdp"
               android:textSize="@dimen/_11ssp"
                android:textColor="@color/whiteColorForBothThemes"

                android:fontFamily="@font/poppins_regular"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_5sdp"


                />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/createindicator"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_5sdp"
                android:background="@color/tabSelecterColor"
                android:layout_marginTop="@dimen/_2sdp"
                android:visibility="gone"

                />

        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/history"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            style="@style/SelectableButtonsBackground"
            android:clickable="true"
            android:focusable="true"


            >
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/historyImage"
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_16sdp"
                android:src="@drawable/history_icon"
                android:layout_gravity="center"
               android:padding="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_10sdp"
                />
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/historyText"
                 android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/history"
                android:paddingHorizontal="@dimen/_1sdp"
               android:textSize="@dimen/_11ssp"
                android:textColor="@color/whiteColorForBothThemes"

                android:fontFamily="@font/poppins_regular"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_5sdp"

                />
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/historyindicator"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_5sdp"
                android:background="@color/tabSelecterColor"
                android:layout_marginTop="@dimen/_2sdp"
                android:visibility="gone"
                />




        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/settings"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            style="@style/SelectableButtonsBackground"
            android:clickable="true"
            android:focusable="true"

            >
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/settingsImage"
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_16sdp"
                android:src="@drawable/setting_icon"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:padding="@dimen/_1sdp"
                />
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/settingsText"
                 android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/settings"
                android:paddingHorizontal="@dimen/_1sdp"
               android:textSize="@dimen/_11ssp"
                android:textColor="@color/whiteColorForBothThemes"

                android:fontFamily="@font/poppins_regular"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_5sdp"

                />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/settingindicator"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_5sdp"
                android:background="@color/tabSelecterColor"
                android:layout_marginTop="@dimen/_2sdp"
                android:visibility="gone"
                />


        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>

   <androidx.constraintlayout.widget.ConstraintLayout
       android:id="@+id/multipleSelectedLayout"
       android:layout_width="0dp"
       android:layout_height="0dp"
       app:layout_constraintTop_toTopOf="@id/tabs"
       app:layout_constraintStart_toStartOf="@id/tabs"
       app:layout_constraintEnd_toEndOf="@id/tabs"
       app:layout_constraintBottom_toBottomOf="@id/tabs"
        android:visibility="gone"
      android:background="@color/tabSelecterColor"


       >
       <androidx.appcompat.widget.AppCompatImageView
           android:id="@+id/backButton"
           android:layout_width="@dimen/_24sdp"
           android:layout_height="@dimen/_24sdp"
           android:layout_marginStart="@dimen/_10sdp"
           android:padding="@dimen/_7sdp"
           android:scaleType="centerCrop"
           android:src="@drawable/back_icon"
           android:layout_gravity="center"

           style="@style/SelectableButtonsBackground"
           android:clickable="true"
           android:focusable="true"

           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintBottom_toBottomOf="parent"
           />
       <com.google.android.material.textview.MaterialTextView
           android:id="@+id/totalSelected"
           android:layout_width="0dp"
           android:layout_height="0dp"

           android:text="5"
           android:textColor="@color/whiteColorForBothThemes"
           android:textSize="@dimen/_14ssp"
           android:fontFamily="@font/poppins_medium"

            android:gravity="center_vertical"
           android:singleLine="true"
           android:ellipsize="end"

           android:layout_marginStart="@dimen/_18sdp"

           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintStart_toEndOf="@id/backButton"
           app:layout_constraintBottom_toBottomOf="parent"
           app:layout_constraintEnd_toStartOf="@id/deleteButton"
           />
       <androidx.appcompat.widget.AppCompatImageView
           android:id="@+id/deleteButton"
           android:layout_width="@dimen/_24sdp"
           android:layout_height="@dimen/_24sdp"
           android:src="@drawable/delete_icon"
           android:padding="@dimen/_6sdp"

           style="@style/SelectableButtonsBackground"
           android:clickable="true"
           android:focusable="true"

           android:scaleType="centerCrop"
           android:layout_gravity="center"
           android:layout_marginEnd="@dimen/_10sdp"
           app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintEnd_toStartOf="@id/copyButton"
           app:layout_constraintBottom_toBottomOf="parent"
           />
       <androidx.appcompat.widget.AppCompatImageView
           android:id="@+id/copyButton"
          android:layout_width="@dimen/_24sdp"
           android:layout_height="@dimen/_24sdp"
           android:src="@drawable/copy_to_clipboard_icon"
           android:padding="@dimen/_6sdp"

           style="@style/SelectableButtonsBackground"
           android:clickable="true"
           android:focusable="true"

           android:scaleType="centerCrop"
           android:tint="@color/whiteColorForBothThemes"
           android:layout_gravity="center"
           app:layout_constraintTop_toTopOf="parent"

           android:layout_marginEnd="@dimen/_10sdp"
           app:layout_constraintBottom_toBottomOf="parent"
           app:layout_constraintEnd_toStartOf="@id/optionsButton"
           />
       <com.google.android.material.imageview.ShapeableImageView
           android:id="@+id/optionsButton"
          android:layout_width="@dimen/_24sdp"
           android:layout_height="@dimen/_24sdp"
           android:src="@drawable/three_dots_icon"
           android:scaleType="centerCrop"
           app:contentPadding="@dimen/_10sdp"

           style="@style/SelectableButtonsBackground"
           android:clickable="true"
           android:focusable="true"

           android:layout_gravity="center"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintBottom_toBottomOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           />
   </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:background="@color/white"
        android:layout_marginBottom="@dimen/_1sdp"
        app:layout_constraintTop_toBottomOf="@id/tabs"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bannerContainer"
        />

    <FrameLayout
        android:id="@+id/bannerContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        />
    <androidx.appcompat.widget.LinearLayoutCompat

        android:id="@+id/ad_Linear_Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:layout_marginHorizontal="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_3sdp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        >

        <include
            android:id="@+id/shimmerLayout"
            layout="@layout/small_native_banner_type_shimmer"
            android:visibility="gone"
            />


        <FrameLayout
            android:id="@+id/adContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"



            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.constraintlayout.widget.ConstraintLayout>