<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/historyFragmentLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.HistoryFrag">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/basicFunction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@color/historyFragmentFirstLayoutBackgroundColor"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/totalEntryInDb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="04"

            android:textSize="@dimen/_12ssp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_regular"

            android:maxLines="1"
            android:singleLine="true"

            android:gravity="center"

            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_15sdp"
          android:layout_marginStart="@dimen/_10sdp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/deleteAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:visibility="gone"
                style="@style/SelectableItemBackground"
                android:clickable="true"
                android:focusable="true"

                android:layout_marginEnd="@dimen/_10sdp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
             >

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="@string/deleteAll"

                android:textSize="@dimen/_12ssp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_regular"


                android:layout_marginEnd="@dimen/_3sdp"


                android:maxLines="1"
                android:singleLine="true"
                android:ellipsize="end"


                android:gravity="center"




                android:paddingStart="@dimen/_4sdp"
                android:paddingEnd="@dimen/_4sdp"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/deleteAllIcon"
                app:layout_constraintBottom_toBottomOf="parent"


                />
            <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/deleteAllIcon"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"

        android:src="@drawable/delete_icon"
        android:tint="@color/black"


        android:clickable="false"


        android:gravity="center"

        android:padding="@dimen/_4sdp"


        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        />

</androidx.constraintlayout.widget.ConstraintLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recylerView"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:background="@color/white"

        android:layout_marginTop="@dimen/_8sdp"
        app:layout_constraintTop_toBottomOf="@id/basicFunction"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        />
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/noDataText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

       android:layout_margin="@dimen/_10sdp"

        android:text="Your scans will be listed here"
        android:textSize="@dimen/_11ssp"
        android:visibility="gone"
        android:textColor="@color/unselectedThumbColor"
        android:textAlignment="center"
        android:fontFamily="@font/poppins_regular"

        app:layout_constraintTop_toBottomOf="@id/basicFunction"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/noOfBarcodeDeletedMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:visibility="gone"
        android:elevation="@dimen/_50sdp"
       android:layout_margin="@dimen/_10sdp"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="@color/black"

        android:text="1 Entry delete"
        android:textSize="@dimen/_11ssp"

        android:textColor="@color/white"
        android:textAlignment="center"
        android:fontFamily="@font/poppins_regular"

        android:paddingTop="@dimen/_8sdp"
        android:paddingBottom="@dimen/_8sdp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>