<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".customCallCut.fragments.QuickReplyFragCallCut"
    android:orientation="vertical">

    <worker8.com.github.radiogroupplus.RadioGroupPlus
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
       <androidx.appcompat.widget.LinearLayoutCompat
           android:id="@+id/firstLayout"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"

           android:orientation="horizontal"
           >
           <RadioButton
               android:id="@+id/radio1"
               android:layout_width="@dimen/_30sdp"
               android:layout_height="@dimen/_30sdp"

               />
           <com.google.android.material.textview.MaterialTextView
               android:id="@+id/radio1Text"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_height="wrap_content"

               android:gravity="center_vertical"

               android:text="Sorry, I can't talk right now"
               android:textColor="@drawable/call_cut_text_selector"
               android:textSize="@dimen/_12ssp"
               />

           <androidx.appcompat.widget.AppCompatImageView
               android:id="@+id/radio1Image"
               android:layout_width="@dimen/_24sdp"
               android:layout_height="@dimen/_24sdp"

               android:visibility="gone"
               android:layout_gravity="center"
               android:src="@color/mainBackGroundColorGreen"
               />

       </androidx.appcompat.widget.LinearLayoutCompat>
       <androidx.appcompat.widget.LinearLayoutCompat
           android:id="@+id/secondLayout"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"

           android:orientation="horizontal"
           >
           <RadioButton
               android:id="@+id/radio2"
               android:layout_width="@dimen/_30sdp"
               android:layout_height="@dimen/_30sdp"

               />
           <com.google.android.material.textview.MaterialTextView
               android:id="@+id/radio2Text"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_height="wrap_content"

               android:text="Can I call you later"
               android:textColor="@drawable/call_cut_text_selector"
               android:textSize="@dimen/_12ssp"
               />

           <androidx.appcompat.widget.AppCompatImageView
               android:id="@+id/radio2Image"
               android:layout_width="@dimen/_24sdp"
               android:layout_height="@dimen/_24sdp"

               android:visibility="gone"
               android:layout_gravity="center"
               android:src="@color/mainBackGroundColorGreen"
               />

       </androidx.appcompat.widget.LinearLayoutCompat>
       <androidx.appcompat.widget.LinearLayoutCompat
           android:id="@+id/thirdLayout"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"

           android:orientation="horizontal"
           >
           <RadioButton
               android:id="@+id/radio3"
               android:layout_width="@dimen/_30sdp"
               android:layout_height="@dimen/_30sdp"

               />
           <com.google.android.material.textview.MaterialTextView
               android:id="@+id/radio3Text"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_height="wrap_content"


               android:text="I'm on my way"
               android:textColor="@drawable/call_cut_text_selector"
               android:textSize="@dimen/_12ssp"
               />

           <androidx.appcompat.widget.AppCompatImageView
               android:id="@+id/radio3Image"
               android:layout_width="@dimen/_24sdp"
               android:layout_height="@dimen/_24sdp"

               android:visibility="gone"
               android:layout_gravity="center"
               android:src="@color/mainBackGroundColorGreen"
               />

       </androidx.appcompat.widget.LinearLayoutCompat>
       <androidx.appcompat.widget.LinearLayoutCompat
           android:id="@+id/fourthLayout"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"

           android:orientation="horizontal"
           >
           <androidx.appcompat.widget.AppCompatImageView
               android:id="@+id/penIcon"
               android:layout_width="@dimen/_30sdp"
               android:layout_height="@dimen/_30sdp"

               android:src="@drawable/call_icon"
               android:tint="@color/mainBackGroundColorGreen"

               />
           <androidx.appcompat.widget.AppCompatEditText
               android:id="@+id/customText"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_height="wrap_content"


               android:hint="Write personal message"
               android:background="@color/whiteColorForBothThemes"
              android:layout_gravity="center_vertical"

               android:textColor="@color/blackColorForBothThemes"
               android:textSize="@dimen/_12ssp"
               />

           <androidx.appcompat.widget.AppCompatImageView
               android:id="@+id/customTextSendIc"
               android:layout_width="@dimen/_24sdp"
               android:layout_height="@dimen/_24sdp"

               android:visibility="gone"
               android:layout_gravity="center"
               android:src="@color/mainBackGroundColorGreen"
               />

       </androidx.appcompat.widget.LinearLayoutCompat>
    </worker8.com.github.radiogroupplus.RadioGroupPlus>

</androidx.constraintlayout.widget.ConstraintLayout>