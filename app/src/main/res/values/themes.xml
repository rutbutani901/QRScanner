<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.QRScanner" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="colorPrimary">@color/mainBackGroundColorGreen</item>
        <item name="colorPrimaryVariant">@color/mainBackGroundColorGreen</item>
        <item name="colorOnPrimary">@color/white</item>


        <item name="colorSecondary">@color/mainBackGroundColorGreen</item>

        <item name="colorSecondaryVariant">@color/mainBackGroundColorGreen</item>

        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">@color/mainBackGroundColorGreen</item>
        <item name="android:includeFontPadding">false</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">
    </style>

    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/datePickerColor</item>
        <item name="android:buttonBarButtonStyle">@style/MyButtonBarButtonStyle</item>
    </style>

    <style name="MyButtonBarButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/datePickerButtonsColor</item>
    </style>


    <style name="SelectableItemBackground">
        <item name="android:theme">@style/SelectableItemTheme</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="SelectableItemTheme">
        <item name="colorControlHighlight">@color/tabSelecterColor</item>
    </style>

    <style name="SelectableButtonsBackground">
        <item name="android:theme">@style/SelectableButtonTheme</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>



    <style name="SelectableButtonTheme">
        <item name="colorControlHighlight">@color/whiteColorForBothThemes</item>
    </style>

<!--    rounded imageview-->
    <style name="roundedImageViewRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>


    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowMinWidthMajor">80%</item>
        <item name="android:windowMinWidthMinor">80%</item>

    </style>


    <style name="adLayoutAdSymbol" parent="Theme.QRScanner">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/ads_icon</item>
        <item name="android:text">Ad</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:minWidth">@dimen/_15sdp</item>
        <item name="android:minHeight">@dimen/_15sdp</item>
        <item name="android:color">@color/whiteColorForBothThemes</item>
        <item name="android:gravity">center</item>
    </style>


<!--    timepickerdialog color-->
    <style name="TimePickerTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/mainBackGroundColorGreen</item>
        <item name="colorPrimary">@color/mainBackGroundColorGreen</item>
        <item name="colorPrimaryDark">@color/mainBackGroundColorGreen</item>
        <item name="colorPrimaryVariant">@color/mainBackGroundColorGreen</item>
        <item name="colorOnPrimary">@color/mainBackGroundColorGreen</item>
        <item name="colorSecondary">@color/mainBackGroundColorGreen</item>

    </style>

    <style name="SplashDelay" parent="Theme.QRScanner">
        <item name="colorPrimary">@color/mainBackGroundColorGreen</item>
        <item name="colorPrimaryDark">@color/mainBackGroundColorGreen</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="o_mr1">shortEdges
        </item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:statusBarColor">@color/mainBackGroundColorGreen</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>


</resources>